// server.js â€” ESM, serves Vite build from /dist
import path, { dirname } from 'path';
import express from 'express';
import { fileURLToPath } from 'url';

const __filename = fileURLToPath(import.meta.url);
const __dirname = dirname(__filename);

const app = express();
const PORT = process.env.PORT || 3000;

// Serve built assets from /dist (created by `vite build`)
const STATIC_DIR = process.env.STATIC_DIR || path.join(__dirname, 'dist');

app.use(express.json({ limit: '2mb' }));
app.use(express.urlencoded({ extended: true }));

app.use(express.static(STATIC_DIR, { maxAge: '1h' }));

// Health check
app.get('/health', (_req, res) => {
  res.json({ ok: true, service: 'frontend', version: 'alpha-esm-dist' });
});

// Root serves built index.html
app.get(['/', '/index', '/index.html'], (_req, res) => {
  res.sendFile(path.join(STATIC_DIR, 'index.html'));
});

// SPA fallback
app.get('*', (req, res, next) => {
  const accept = req.headers.accept || '';
  if (accept.includes('text/html')) {
    return res.sendFile(path.join(STATIC_DIR, 'index.html'));
  }
  next();
});

app.listen(PORT, () => {
  console.log(`Frontend server listening on ${PORT}`);
  console.log(`Serving static files from: ${STATIC_DIR}`);
});
